void start() {
gotoxy(48, 7); printf("┌──────────────┐");
gotoxy(48, 8); printf("│ │");
gotoxy(48, 9); printf("│ 2100년 │");
gotoxy(48, 10); printf("│ 특별할인 │");
gotoxy(48, 11); printf("│ │");
gotoxy(48, 12); printf("└──────────────┘");
bg1();

gotoxy(38, 25), setColor(WHITE); printf("하...........");
Sleep(2500);
gotoxy(38, 25), setColor(WHITE); printf("엄딱...........");
Sleep(3000);
gotoxy(38, 25), setColor(WHITE); printf("이제 어떡하냐....");
Sleep(3000);
gotoxy(38, 25), setColor(WHITE); printf("      응?             ");
Sleep(2500);
system("cls");
Sleep(500);

gotoxy(35, 4);
for (int i = 0; i < 25; i++) {
    for (int j = 0; j < 25; j++) {
        printf("■");
    }
    gotoxy(35, 4 + i);
}

gotoxy(39, 7); printf("이제 가게 님꺼임(서류)");
Sleep(2000);
system("cls");
Sleep(1000);

bg1();
gotoxy(36, 25), setColor(WHITE); printf("가게를 물려받았네...");
Sleep(3000);
gotoxy(36, 25), setColor(WHITE); printf("하... 일하기 싫은데...");
Sleep(3000);
gotoxy(36, 25), setColor(WHITE); printf("돈은 없고...             ");
Sleep(3000);
gotoxy(36, 25), setColor(WHITE); printf("이딴 가게는 팔리지도 않고...");
Sleep(3000);
gotoxy(36, 25), setColor(WHITE); printf("어쩔 수 없이 해야겠네...      ");
Sleep(3000);
system("cls");

logo(1);

gotoxy(39, 14); printf("3일 후...");
Sleep(2000);
system("cls");
Sleep(1000);

bg2();
gotoxy(40, 23), setColor(WHITE); printf("행복도: %d | 돈: %d", happy, money);
Sleep(500);

gotoxy(36, 25); printf("하...    ");
Sleep(1500);
gotoxy(36, 25); printf("준비 끝났다.");
Sleep(2000);
gotoxy(36, 25); printf("이제 시작해볼까?");
Sleep(1500);
gotoxy(35, 26); printf("(아무 키나 입력하세요)");
_getch();
Sleep(500);
gotoxy(36, 25); printf("?: 문 열었나요?");
gotoxy(35, 26); printf("                      ");
Sleep(2000);
gotoxy(36, 25); printf("네                  ");
Sleep(1500);
