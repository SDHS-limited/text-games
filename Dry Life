        gotoxy(31, 15), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 16), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 17), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 18), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 19), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 20), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 21), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 22), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 23), setColor(WHITE); printf("■■■■■■■■■■■■■");
        gotoxy(39, 10), setColor(WHITE); printf("%d   %d   %d", a, b, c);
        if (b == 7)
        {
            b = 1;
        }
        else
        {
            b += 1 + (rand() % 2);
        }
        if (c == 7)
        {
            c = 1;
        }
        else
        {
            c += 1 + (rand() % 2);
        }

    }
    else if (c1 == 0)
    {
        gotoxy(31, 5), setColor(WHITE); printf("■■■■■■■■■■■■■");
        gotoxy(31, 6), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 7), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 8), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 9), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 10), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 11), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 12), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 13), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 14), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 15), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 16), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 17), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 18), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 19), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 20), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 21), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 22), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 23), setColor(WHITE); printf("■■■■■■■■■■■■■");

        gotoxy(39, 10), setColor(WHITE); printf("%d   %d   %d", a, b, c);
        if (c == 7)
        {
            c = 1;
        }
        else
        {
            gotoxy(31, 5), setColor(WHITE); printf("■■■■■■■■■■■■■");
            gotoxy(31, 6), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 7), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 8), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 9), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 10), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 11), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 12), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 13), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 14), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 15), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 16), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 17), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 18), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 19), setColor(WHITE); printf("■                      ■");
