//  It is a text game made in C language. The name of the game is Dry Life. Enjoy.
#include <stdio.h>
#include <conio.h>
#include <windows.h>
#include <time.h>
void setColor(int color);
void gotoxy(int x, int y);
void logo(int a);
void slot();
void start();
void bg1();
void bg2();
void fo();
void customer1();
void customer2();
void customer3();
void customer4();
void customer5();
void char4();
void ending();

enum ColorType {
BLACK, //0
DARKBLUE, //1
DARKGREEN, //2
DARKSKYBLUE,
DARKRED,
DARKPURPLE,
DARKYELLOW,
GRAY,
DARKGRAY,
BLUE,
GREEN,
SKYBLUE,
RED,
PURPLE,
YELLOW,
WHITE
}COLOR;

int happy = 20, money = 0;

int main() {
system("mode con cols=90 lines=35 | title Dry Life");
logo(0);
slot();
start();
customer1();
customer2();
customer3();
customer4();
customer5();
ending();
}

void slot() {
int ch;

int a = 1;
int b = 1;
int c = 1;

bool a1 = 0;
bool b1 = 0;
bool c1 = 0;
bool ent = 0;

gotoxy(30, 10), setColor(GREEN); printf("스페이스바 3번 누르세요");
Sleep(2000);
system("cls");
Sleep(500);

while (ent == 0)
{

    if (_kbhit() == 1)
    {

        ch = _getch();
        if (ch == 32 && a1 == 0)
        {
            a1 = 1;
        }
        else if (ch == 32 && b1 == 0)
        {
            b1 = 1;
        }
        else if (ch == 32 && c1 == 0)
        {
            c1 = 1;
        }
    }
    if (a1 == 1 && b1 == 1 && c1 == 1)
    {

        if (a == b && b == c)
        {
            system("cls");
            ent = 1;
            gotoxy(31, 5), setColor(WHITE); printf("■■■■■■■■■■■■■");
            gotoxy(31, 6), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 7), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 8), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 9), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 10), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 11), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 12), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 13), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 14), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 15), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 16), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 17), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 18), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 19), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 20), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 21), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 22), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 23), setColor(WHITE); printf("■■■■■■■■■■■■■");
            gotoxy(39, 10), setColor(WHITE); printf("%d   %d   %d", a, b, c);
            gotoxy(37, 15), setColor(WHITE); printf("★★★★★ 성공! ★★★★★");
        }
        else
        {
            system("cls");
            ent = 1;
            gotoxy(31, 5), setColor(WHITE); printf("■■■■■■■■■■■■■");
            gotoxy(31, 6), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 7), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 8), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 9), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 10), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 11), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 12), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 13), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 14), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 15), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 16), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 17), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 18), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 19), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 20), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 21), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 22), setColor(WHITE); printf("■                      ■");
            gotoxy(31, 23), setColor(WHITE); printf("■■■■■■■■■■■■■");
            gotoxy(39, 10), setColor(WHITE); printf("%d   %d   %d", a, b, c);
            gotoxy(37, 15), setColor(WHITE); printf("인생 도박 실패!");
        }
    }
    if (a1 == 0 || b1 == 0 || c1 == 0)
    {
        system("cls");
    }
    if (a == 8)
    {
        a = 1;
    }
    if (b == 8)
    {
        b = 1;
    }
    if (c == 8)
    {
        c = 1;
    }
    if (a1 == 0)
    {
        gotoxy(31, 5), setColor(WHITE); printf("■■■■■■■■■■■■■");
        gotoxy(31, 6), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 7), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 8), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 9), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 10), setColor(WHITE); printf("■                      ■");
        gotoxy(31, 11), setColor(WHITE); printf("■                      ■");
