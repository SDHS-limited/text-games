void customer4() {
int a = 0, result = 0, c = 0;
bg2();
gotoxy(40, 23), setColor(WHITE); printf("행복도: %d | 돈: %d", happy, money);
char4();
gotoxy(36, 25); printf("공유: 저랑 딱지치기 한판 하시죠");
Sleep(2000);
gotoxy(36, 25); printf(" ");
gotoxy(36, 24); printf("1. 네");
gotoxy(36, 26); printf("2. 싫어요.");
scanf_s("%d", &a);
gotoxy(36, 24); printf(" ");
gotoxy(36, 26); printf(" ");
gotoxy(36, 25); printf(" ");
gotoxy(36, 27); printf(" ");
if (a == 1) {
system("cls");
Sleep(1000);
int x = 30;
gotoxy(35, 11); setColor(RED);
for (int i = 0; i < 15; i++) {
for (int j = 0; j < 15; j++) {
printf("■");
}
gotoxy(35, 11 + i);
}
gotoxy(x, 9), setColor(WHITE); printf(" q를 누르면 멈춥니다.");
gotoxy(x, 4), setColor(RED); printf("| |");
gotoxy(x + 11, 4), setColor(DARKYELLOW); printf("| |");
gotoxy(x + 18, 4), setColor(GREEN); printf(" |"); setColor(WHITE);
gotoxy(x, 5); printf(" -----------------------------------------");
gotoxy(x, 7); printf(" -----------------------------------------");
gotoxy(x, 6); printf("| |");
int run = 0;
char key;
while (1) {
if (run == 0) {
while (1) {
Sleep(5);
gotoxy(x + 1, 6), setColor(GREEN); printf("▶");
x++;
run++;
if (run == 39) {
break;
}
else if (_kbhit() == 1) {
key = _getch();
if (key == 'q' || key == 'Q')
c = 1;
break;
}
}
if (run >= 18 && run <= 22 && c == 1) {
result = 1; break;
}
else if (run >= 13 && run <= 28 && c == 1) {
result = rand() % 2; break;
}
else if (c == 1) {
result = 0; break;
}
}
else if (run == 39) {
while (1) {
Sleep(5);
gotoxy(x + 1, 6), setColor(RED); printf("◀");
x--;
run--;
if (run == 0) {
break;
}
else if (_kbhit() == 1) {
key = _getch();
if (key == 'q' || key == 'Q')
c = 1;
break;
}
}
if (run >= 18 && run <= 22 && c == 1) {
result = 1; break;
}
else if (run >= 13 && run <= 28 && c == 1) {
result = rand() % 2; break;
}
else if (c == 1) {
result = 0; break;
}
}
}
Sleep(500);
system("cls");
Sleep(500);
if (result == 1) {
gotoxy(38, 10); printf("승리");
Sleep(2000);
happy -= 10; money -= 10;
}
else if (result == 0) {
gotoxy(38, 10); printf("패배...");
Sleep(2000);
happy += 10; money += 10;
}
}

fo();
}

