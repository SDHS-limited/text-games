void logo(int a) {
gotoxy(16, 1), setColor(WHITE); printf("■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■");

gotoxy(16, 2), setColor(WHITE); printf("■");
gotoxy(16, 3), setColor(WHITE); printf("■");
gotoxy(16, 4), setColor(WHITE); printf("■");
gotoxy(16, 5), setColor(WHITE); printf("■");
gotoxy(16, 6), setColor(WHITE); printf("■");
gotoxy(16, 7), setColor(WHITE); printf("■");
gotoxy(16, 8), setColor(WHITE); printf("■");
gotoxy(16, 9), setColor(WHITE); printf("■");
gotoxy(16, 10), setColor(WHITE); printf("■");

gotoxy(16, 11), setColor(WHITE); printf("■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■■");

gotoxy(76, 2), setColor(WHITE); printf("■");
gotoxy(76, 3), setColor(WHITE); printf("■");
gotoxy(76, 4), setColor(WHITE); printf("■");
gotoxy(76, 5), setColor(WHITE); printf("■");
gotoxy(76, 6), setColor(WHITE); printf("■");
gotoxy(76, 7), setColor(WHITE); printf("■");
gotoxy(76, 8), setColor(WHITE); printf("■");
gotoxy(76, 9), setColor(WHITE); printf("■");
gotoxy(76, 10), setColor(WHITE); printf("■");
if (a == 0) {
    gotoxy(40, 20); printf("아무 키나 입력하세요");
}
else if (a == 1) {
    gotoxy(40, 20); printf("로딩 중");
    gotoxy(35, 22); printf("(아무 키나 입력하세요)");
}
else if (a == 2) {
    gotoxy(40, 20); printf("키 입력 시 종료됩니다.");
    exit(0);
}
_getch();
Sleep(1000);
system("cls");
Sleep(1000);
}

void gotoxy(int x, int y) {
COORD pos = { x, y };
SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), pos);
}

void setColor(int color) {
SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE), color);
}**
